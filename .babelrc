{
  "presets": ["es2015", "react", "stage-0", "node6"],
  "env": {
    "development": {
      "plugins": [
        "transform-runtime",
        [
          "react-transform",
          {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              }
            ]
          }
        ]
      ]
    }
  }
}